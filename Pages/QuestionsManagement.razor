@page "/manage-questions"
@using ConfigurationTool.Model
@attribute [Authorize]
<!-- TODO: Add roles here like this attribute [Authorize(Roles = "Admin")] -->
@inject IStringLocalizer<ApplicationResource> Localizer

<PageTitle>@Localizer["QuestionsManagement"]</PageTitle>
<MudText Typo="Typo.h3" GutterBottom="true">@Localizer["QuestionsManagement"]</MudText>
<!-- // TODO: Continue here 26:30 https://www.youtube.com/watch?v=Yh16E2u2pio -->
<MudGrid>
    <MudItem xs="12" sm="7">
        <MudPaper Class="pa-4">
            <MudForm @ref="_form" @bind-IsValid="@_success">
                <MudTextField T="string" Label=@Localizer["Question"] Required="true" @ref="_questionInput"
                              RequiredError=@Localizer["ErrorTextQuestion"]
                              Validation="@(new Func<string, IEnumerable<string>>(LengthCheck))"/>

                <MudTextField T="string" Label=@Localizer["Answer"] Required="true" @ref="_answerInput"
                              RequiredError=@Localizer["ErrorTextAnswer"]
                              Validation="@(new Func<string, IEnumerable<string>>(LengthCheck))"/>

            </MudForm>
        </MudPaper>
        <MudPaper Class="pa-4 mt-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@(() => _form.Validate())">@Localizer["Submit"]</MudButton>
            <MudButton Variant="Variant.Filled" DisableElevation="true" OnClick="@(() => _form.Reset())">@Localizer["Reset"]</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>


@code {
    bool _success;
    MudTextField<string>? _questionInput;
    MudTextField<string>? _answerInput;
    MudForm? _form;
    List<Question> _questions = new List<Question>();

    private IEnumerable<string> LengthCheck(string input)
    {
        if (input.Length < 10 || string.IsNullOrWhiteSpace(input))
            yield return Localizer["ErrorTextInputQuestionManagment"];
    }
}