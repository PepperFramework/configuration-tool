@using ConfigurationTool.Model
@inject IDialogService DialogService

<MudPaper Style="margin-top: 2em; padding: 5px">
    <MudText>Question: @Question.Text</MudText>
    @foreach (var answer in Question.Answers)
    {
        <MudText>Answer: @answer.Text</MudText>
    }
</MudPaper>
<MudToggleIconButton @bind-Toggled="@_isOpen" Icon="@Icons.Material.Filled.Fullscreen" Color="@Color.Primary" ToggledIcon="@Icons.Material.Filled.FullscreenExit" ToggledColor="@Color.Secondary" />


<MudButton @onclick="OpenDialog" Variant="Variant.Filled" Color="Color.Primary">
    Open Simple Dialog
</MudButton>

@code {
    private bool _isOpen = false;
    [Parameter] public Question Question { get; set; } = new();
    
    private void OpenDialog()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        DialogService.Show<DialogUsageExample_Dialog>("Simple Dialog", options);
    }
}